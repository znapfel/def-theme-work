<main>
    <div id="column-left">
        {%- if product.images.size > 0 -%}
            <img src="{{ product | img_url: '480x480', scale: 2, crop: 'center' }}"/>

            {%- if product.images.size > 0 -%} 
            <ul id="thumbnails">
                {%- for image in product.images -%}
                    <li>
                        <a href="{{ image | img_url: 'master' }}" target="_blank">
                            <img src="{{ image | img_url: '240x240', scale: 2, crop: 'center'}}" alt="{{ product.title | escape }}">
                        </a>
                    </li>
                {%- endfor -%}
            </ul>
            {%- endif -%}
        {%- else -%}
            {{ 'image' | placeholder_svg_tag }}
        {%- endif -%}
    </div>
</main>