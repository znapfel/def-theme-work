@import 'slick-theme.min.css';
@import 'slick.min.css';
// Variables 
$background-color: gray;

// Breakpoint Variables
$break-at: 60rem;

html {
    color: black;
    height: 100%;
}

// Base Styles
body {
    margin: 0;
    font-size: 16px;
    min-height: 100%;
    
    
    display: grid;
    grid: auto;
}

// Mobile Styles First


header {
    background: $background-color;
    text-align: center;
    //Make position and z-index change based on theme settings
    position: relative;
    z-index: 999;
    width: 100%;
    margin-bottom: auto;
}

// Mobile Header Styles
.header--nav-toggle {
    position: absolute;
    top: -9999px;
    left: -9999px;
}

.header--nav-toggle-label{
    position: absolute;
    top: 0;
    left: 0;
    margin-left: 1em;
    height: 100%;
    display: flex;
    align-items: center;
}


.header--nav-toggle-label span,
.header--nav-toggle-label span::before,
.header--nav-toggle-label span::after {
    display:block;
    background: black;
    height: 2px;
    width: 2em;
    border-radius: 5px;
    position: relative;    
}

.header--nav-toggle-label span::before,
.header--nav-toggle-label span::after {
    content: '';
    position: absolute;
}

.header--nav-toggle-label span::before {
    bottom: 7px;
}

.header--nav-toggle-label span::after {
    top: 7px;
}

header nav {
    position: absolute;
    text-align: left;
    top: 100%;
    left: 0;
    background: $background-color;
    width: 100%;
    transform: scale(1, 0);
    transform-origin: top;
    transition: transform 400ms ease-in;
}

header nav ul {
    margin: 0;
    padding: 0;
    list-style: none;
}

header nav li {
    margin-bottom: 1em;
    margin-left: 1em;
}

header nav a {
    // make color variable;
    color: black;
    text-decoration: none;
    font-size: 1.2rem;
    opacity: 0;
    transition: opacity 150ms ease-in-out;
}

header nav a:hover {
    // make color variable;
    color: white;
}

.header--dropdown-menu {
    display: flex;
    flex-direction: column;
    transform: scale(1, 1);
    transform-origin: top left;
    transition: transform 250ms ease-in;
}

.header--dropdown-hidden {
    transform: scale(1, 0);
    transform-origin: top left;
    transition: transform 250ms ease-in;
}

.dropdown-toggle::after {
    justify-content: flex-end;
    content: "+";
}

.header--dropdown-item {
    padding: 1em;
    margin-left: 0.5em;
    opacity: 1;
    transform: opacity 250ms ease-in;
}

.header--nav-toggle:checked ~ nav{
   transform: scale(1, 1);
}

.header--nav-toggle:checked ~ nav a {
    opacity: 1;
    transition: opacity 250ms ease-in-out 250ms
}

// Footer Styles

#shopify-section-footer {
    margin-top: auto;
}

footer {
    background-color: $background-color;
    display: grid;
    grid-template-columns: 1fr 1fr 1fr 1fr;
    
}

.footer--link-list {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.footer--link-list h3, .footer--link-list nav {
    text-transform: uppercase;
}

.footer--link-list h3 {
    font-size: 1.2rem;
}

footer nav a {
    color: black;
    text-decoration: none;
    font-size: 1rem;
}

.footer--navigation {
    display: flex;
    flex-direction: column;
}

.footer--navigation a {
    margin: 0.5em 0;
}

// Product Page Layout

.product-page {
    padding: 2em 0;
    display: grid;
    
    grid-template-areas: 
        ". images images ."
        ". details details ."
        ". details details ."
        ". . . ."
        ". rec rec .";
        
    grid-template-columns: 2em minmax(600px, 1.5fr) 1fr 2em;
}

.primary-images {
  grid-area: images;
  width: 100%;
}

.product--product-details{
  grid-area: details;
}

.slick-prev {
  position: absolute;
  top: 50%;
}

.slick-next {
  position: absolute;
  top: 50%;
  left: 92%;
}

.slick-dots button {
  background-color: transparent;
  border: none;
}

.product--image-thumbnails .slick-track {
  display: flex;
  justify-content: space-between;
}

.product--thumbnail-wrapper {
 width: 20%; 
 margin: 5px;
}

.product--thumbnail-wrapper img {
  width: 100%;
  height: 100%;
}

.product--product-details form {
  display: flex;
  flex-direction:column;
  width: 100%;
}

.product--product-details form label {
  margin: 10px 0px;
}

.product--product-details form select {
  padding: 15px 9px;
}

.product--product-details form button {
  margin: 20px 0;
  width: 100%;
  padding: 15px 9px;
}

// Desktop Styles
@media screen and (min-width: $break-at) {
    
    // Header Desktop Styles
    .header--nav-toggle-label {
        display: none;
    }

    header .shopify-section{
        display: grid;
        grid-template-columns: 1fr auto minmax(600px, 3fr) 1fr;
    }

    .logo {
        grid-column: 2 / 3;
    }

    header nav {
        grid-column: 3 / 4;
        position: relative;
        text-align: left;
        transition: none;
        transform: scale(1,1);
        background: none;
        top: initial;
        left: initial;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    header nav ul {
        display: flex;
    }

    header nav li {
        margin-left: 1.5em;
        margin-bottom: 0;
    }

    header nav a {
        opacity: 1;
        position: relative;
    }

    header nav a::before {
        content: '';
        position: absolute;
        bottom: -0.5em;
        left: 0;
        right: 0;
        display: block;
        height: 5px;
        border-radius: 8px;
        // make color variable;
        background: white;
        transform: scale(0, 1);
        transition: transform ease-in-out 250ms;
    }

    header nav a:hover::before {
        transform: scale(1, 1);
    }

    .header--dropdown-menu {
        position: absolute;
        background-color: $background-color;
        padding: 1em;
        margin-left: 0;
    }

    // Product Page Layout Desktop
    .product-page {
  grid-template-areas: 
    ". images . details ."
    ". .      . details ."
    ". .      . details ."
    ". .      .    .    ."
    ". rec    rec  rec  .";
    
    grid-template-columns: 2em 600px 2em 1fr 2em;
  }
  
  .product--product-details form {
  display: flex;
  flex-direction:column;
  width: 50%;
}

.product--product-details form label {
  margin: 10px 0px;
}

.product--product-details form select {
  padding: 15px 9px;
}

.product--product-details form button {
  margin: 20px 0;
  width: 100%;
  padding: 15px 9px;
}
    
}