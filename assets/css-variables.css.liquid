:root {
    /* General Colors */
    --font-color: {{ settings.font-color }};
    --link-color: {{ settings.link-color }};
    --active-link-color: {{ settings.active-link-color }};
    --sold-out-badge-color: {{ settings.sold-out-badge-color}};

    /* Header Colors */
    --header-text-color: {{ settings.header-text-color }};
    --header-background-color: {{ settings.header-background-color }};
    --sticky-header-background-color: {{ settings.sticky-header-background-color }};
    --sticky-header-text-color: {{ settings.sticky-header-text-color }};
    --sticky-header-border-color: {{ settings.sticky-header-border-color }};

    /* Footer Colors */ 
    --footer-background-color: {{ settings.footer-background-color }};
    --footer-text-color: {{ settings.footer-text-color }};

    /* Main Menu Colors */ 
    --main-menu-background-color: {{ settings.main-menu-background-color }};
    --main-menu-text-color: {{ settings.main-menu-text-color }};
    --main-menu-border-color: {{ settings.main-menu-border-color }};

    /* Page Colors */
    --bg_color: {{ settings.bg-color }};

    /* Button Colors */
    --add-to-cart-background-color: {{ settings.add-to-cart-background-color }};
    --add-to-cart-background-hover-color: {{ settings.add-to-cart-background-hover-color }};
    --add-to-cart-text-color: {{ settings.add-to-cart-text-color }};

    /* Pop Up Colors */
    --pop-up-text-background-color: {{ settings.pop-up-text-background-color }};
    --pop-up-text-header-text-color: {{ settings.pop-up-text-header-text-color }};

    /* Sales Badge Colors */
    --sale-label-color: {{ settings.sale-label-color }};


    /* TYPOGRAPHY */
    
    /* Headings */
    --headingFontStack: {{ heading_font.family }}, {{ heading_font.fallback_families }};
    --title-bar-styling: {{ settings.title-bar-styling }};
    --heading-case: {{ settings.heading-case }};
    --typography-headings-font-size: {{ settings.typography-headings-font-size }}px;

    /* Base Fonts*/
    --baseFontStack: {{ base_font.family }}, {{ base_font.fallback_families }};
    --typography-body-font-size: {{ settings.typography-body-font-size }}px;


    /* Navigation Fonts */
    --navigationFontStack: {{ navigation_font.family }}, {{ navigation_font.fallback_families }};
    --typography-menu-font-size: {{ settings.typography-menu-font-size }}px;
    --menu-case: {{ settings.menu-case }};
    --product-page-font-size: {{ settings.product-page-font-size }};

    --add-to-cart-font-size: {{ settings.add-to-cart-font-size }};
    --add-to-cart-text-transform: {{ settings.add-to-cart-text-transform }};

}
