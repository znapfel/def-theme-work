<article class="collection-item">
    <a href="{{ collection.url }}" class="collection--collection-card">
        {%- assign collection_image = collection.featured_image | default: collection.products.first.featured_image -%}
        <img class="collection--featured-image" src="{{ collection_image | img_url: '200x200', scale: 2, crop: 'center' }} alt="{{ collection.title | escape }}"/>
        <div class="collection--card-overlay">
            <h4>Shop {{ collection.title | escape }}</h4>
        </div>
    </a>
</article>

